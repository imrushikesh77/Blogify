<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>HomePage</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="cover image" width="700px">
        <pre class="mt-3" width="100px"><%= blog.body %></pre>
        <div class="mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="profile image" width="50px"><%= blog.createdBy.fullName %>
        </div>
    </div>
    <hr>
    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <% comments.forEach(function(comment) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <img src="<%= comment.createdBy.profileImageURL %>" alt="profile image" width="50px"><%= comment.createdBy.fullName %>
                    <p class="card-text"><%= comment.content %></p>
                </div>
            </div>
        <% }); %>
    </div>
    <% if (locals.user) { %>
        <div class="container mt-3">
            <form action="/blog/comment/<%= blog._id %>" method="post" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                    <input type="text" class="form-control" id="content" aria-describedby="content" name="content" placeholder="Enter your comment">
                    <button class="btn btn-sm btn-primary mt-3" type="submit">Add comment</button>
                </div>
              </form>
        </div>
    <% } %>
    <%- include("./partials/scripts") %>
</body>
</html>